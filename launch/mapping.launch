<?xml version="1.0"?>
<launch>

    <arg name="model" default="burger"/>

    <arg name="x" default="0.5"/>
    <arg name="y" default="-3.0"/>
    <arg name="z" default="0.0"/>
    <arg name="yaw" default="0.0"/>
	<arg name="js" default="js0"/>

    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="world_name" value="$(find pedsim_simulator)/worlds/altorfer_v2.world"/>
        <arg name="paused" value="false"/>
        <arg name="use_sim_time" value="true"/>
        <arg name="gui" value="true"/>
        <arg name="headless" value="false"/>
        <arg name="debug" value="false"/>
    </include>

    <!-- Get the description of the turtlebot 3 from the urdf file -->
	<param name="robot_description" command="$(find xacro)/xacro --inorder $(find turtlebot3_description)/urdf/turtlebot3_$(arg model).urdf.xacro" />

    <!-- Spawn a turtlebot 3 in the gazebo world -->
	<node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" args="-urdf -model turtlebot3_$(arg model) -x $(arg x) -y $(arg y) -z $(arg z) -Y $(arg yaw) -param robot_description" />

    <!-- Turtlebot3 bringup -->
    <include file="$(find turtlebot3_bringup)/launch/turtlebot3_remote.launch">
        <arg name="model" value="$(arg model)" />
    </include>

    <node pkg="gmapping" name="slam_gmapping" type="slam_gmapping">
        <param name="xmin" value="1"/>
        <param name="ymin" value="1"/>
        <param name="xmax" value="12"/>
        <param name="ymax" value="12"/>
    </node>

    <!-- joy node -->
 	<node respawn="true" pkg="joy" type="joy_node" name="joy" >
	    <param name="dev" type="string" value="/dev/input/$(arg js)" />
	    <param name="deadzone" value="0.12" />
		<param name="autorepeat_rate" value="10"/>
  	</node>

  	<node pkg="human-aware-tb3-navigation" type="teleop_node.py" name="teleop_node"/>



</launch>
